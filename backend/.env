# Environment Variables for Placement Portal Backend

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/placement_portal
# Alternative: Use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/placement_portal?retryWrites=true&w=majority

# JWT Secret Keys
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Admin SDK (for authentication integration)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Firebase_Private_Key_Here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Code Execution Service (Optional - for online judge)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_API_KEY=your_rapidapi_key_for_judge0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
COOKIE_SECRET=your_cookie_secret_key

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379
